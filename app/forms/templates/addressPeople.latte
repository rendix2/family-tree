{form form}
    {foreach $peoples as $people}
        <div class="form-check">
            <input
                type="checkbox"
                name="people[]"
                value="{$people->id}"
                id="people{$people->id}"
                {if array_key_exists($people->id, $selectedPeoples)} checked="checked"{/if}
            >
            <label for="people{$people->id}">{$people->name} {$people->surname}</label>
        </div>
    {/foreach}

    {input send}
{/form}