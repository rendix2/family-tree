{block title}{_note_history_notes_history}{/block}

{block breadcrumb}
    <li class="breadcrumb-item active" aria-current="page">{_note_history_notes_history}</li>
{/block}

{define modal-editDeleteItem-title}
    {_note_history_delete_note_history} #{$presenter->getParameter('id')}?
{/define}

{define modal-editDeleteItem-body}
    {control listDeleteForm}
{/define}

{block content}
    {snippet list}
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th>{_note_history_id}</th>
            <th>{_note_history_person}</th>
            <th>{_note_history_date}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {foreach $notesHistory as $note}
            <tr>
                <td class="align-middle">{$note->id}</td>
                <td class="align-middle">
                    <a href="{link Person:edit, $note->personId}">{$note|person}</a>
                </td>
                <td class="align-middle">{$note->date|date:'d.m.Y'}</td>
                <td>
                    <a href="{link NoteHistory:applyNote, $note->id}" class="btn btn-info btn-block">
                        <i class="fas fa-check"></i> {_note_history_apply}
                    </a>

                    <a href="{link NoteHistory:edit, $note->id}" class="btn btn-primary btn-block">
                        <i class="fas fa-edit"></i> {_edit}
                    </a>

                    <a href="{link listDeleteItem!, $note->id}" class="ajax btn btn-danger btn-block">
                        <i class="fas fa-trash"></i> {_delete}
                    </a>
                </td>
            </tr>
        {/foreach}
        </tbody>
    </table>
    {/snippet}
{/block}
