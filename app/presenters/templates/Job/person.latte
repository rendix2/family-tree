{block title}{_job_add_person}{/block}

{block breadcrumb}
    <li class="breadcrumb-item">
        <a href="{link Job:default}">{_menu_job}</a>
    </li>

    <li class="breadcrumb-item active" aria-current="page">{_job_add_person}</li>
{/block}

{block content}
    <div class="card">
        <div class="card-header">
            <div class="float-left">{_job_job}</div>
            <div class="float-right">
                {if $presenter->getParameter('id')}
                <a href="{link Job:edit}" class="btn btn-primary">{_add}</a>
                <a href="{link deleteItem!, $presenter->getParameter('id')}" class="ajax btn btn-danger">{_delete}</a>
                {/if}
            </div>
        </div>
        <div class="card-body">
            {control personForm}
        </div>
    </div>
{/block}
