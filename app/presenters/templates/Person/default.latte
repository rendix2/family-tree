{block title}{_menu_persons}{/block}

{block breadcrumb}
    <li class="breadcrumb-item active" aria-current="page">{_menu_persons}</li>
{/block}

{define modalTitle}{_person_delete_person} #{$presenter->getParameter('id')}?{/define}

{define modal}{control deleteForm}{/define}

{block content}
<div class="float-right mb-1">
    <a href="{link Person:edit}" class="btn btn-primary">{_add}</a>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
        <th>{_person_id}</th>
        <th>{_person_full_name}</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    {foreach $persons as $person}
        <tr>
            <td>{$person->id}</td>
            <td>{$person|person}</td>
            <td>
                <a href="{link Person:edit, $person->id}" class="btn btn-primary">{_edit}</a>
                <a href="{link deleteItem!, $person->id}" class="ajax btn btn-danger">{_delete}</a>
            </td>
        </tr>
    {/foreach}
    </tbody>
</table>
{/block}
