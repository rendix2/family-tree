            <a href="{link Genus:edit}" class="btn btn-secondary">{_person_add_genus}</a>
            <a href="{link Place:edit}" class="btn btn-secondary">{_person_add_place}</a>

            {if $presenter->getParameter('id')}
            <a href="{link Person:edit}" class="btn btn-secondary">{_person_add_person}</a>
            <a href="{link deleteItem!, $presenter->getParameter('id')}" class="ajax btn btn-danger">{_person_delete_person}</a>
            {/if}
        </div>
    </div>
    <div class="card-body">
        {control form}
    </div>
</div>

    <div class="card mt-1">
