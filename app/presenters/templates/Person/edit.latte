                        <a href="{link Source:edit, $source->id}" class="btn btn-secondary btn-block" target="_blank">
                            <i class="fas fa-edit"></i> {_source_edit_source}
                        </a>

                        <a href="{link personDeleteSourceModal:personDeleteSource!, $presenter->getParameter('id'), $source->id}" class="ajax btn btn-danger btn-block">
                            <i class="fas fa-trash"></i> {_source_delete_source, ['']}
                        </a>
                    </td>
                </tr>
                {/foreach}
                </tbody>
            </table>
            {/snippet}
        </div>
    </div>

    {* FILES BEGIN *}
    <div class="card mt-1">
        <div class="card-header d-flex align-items-center">
            <span class="ml-0">
                <h2>{_person_files}</h2>
            </span>
            <div class="ml-auto">
                <a href="{link personAddFileModal:personAddFile!, $presenter->getParameter('id')}" class="ajax btn btn-secondary {if !$presenter->getParameter('id')}disabled{/if}">
                    <i class="fas fa-plus"></i> {_person_add_file, ['']}
                </a>
            </div>
        </div>
        <div class="card-body">
            {snippet files}
                <table class="table table-borderless">
                    <tbody>
                    {foreach $files as $key => $filesRow}
                        <tr>
                            {foreach $filesRow as $file}
                            <td>
                            {if $file->type === 'image'}
                                {if file_exists($filesDir . 'thumbnails' . $sep . 's' . $file->newName . '.' . $file->extension)}
                                <a href="{link personShowImage!, $file->id}" class="ajax">
                                    <img src="/files/thumbnails/s{$file->newName . '.' .$file->extension}" class="img-fluid rounded">
                                </a>
                                {else}
                                <i class="fas fa-file-image fa-10x"></i>
                                {/if}
                            {elseif $file->type ==='pdf'}
                                <i class="fa fa-file-pdf fa-10x"></i>
                            {elseif $file->type ==='word'}
                                <i class="fa fa-file-word fa-10x"></i>
                            {elseif $file->type ==='excel'}
                                <i class="fa fa-file-excel fa-10x"></i>
                            {elseif $file->type ==='text'}
                                <i class="fas fa-envelope-open-text fa-10x"></i>
                            {elseif $file->type ==='archive'}
                                <i class="fas fa-file-archive fa-10x"></i>
                            {elseif $file->type ==='powerpoit'}
                                <i class="fas fa-file-powerpoint fa-10x"></i>
                            {else}
                                <i class="fas fa-file fa-10x"></i>
                            {/if}
                                <br>

                                <a href="{link File:edit, $file->id}" class="btn btn-secondary mt-1">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a href="{link File:download, $file->id}" class="btn btn-secondary mt-1">
                                    <i class="fas fa-file-download"></i>
                                </a>

                                <a href="{link personDeleteFile!, $file->id}" class="ajax btn btn-danger mt-1">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                            {/foreach}
                        </tr>
                    {/foreach}
                    </tbody>
                </table>
            {/snippet}
        </div>
    </div>
    {* FILES END *}

    {* GENUS PERSONS BEGIN *}
    <div class="card mt-1">
        <div class="card-header d-flex align-items-center">
            <span class="ml-0">
                <h2>{_person_genus}</h2>
            </span>
            <div class="ml-auto">
                {if $presenter->getParameter('id') && $person->genus}
                    <a href="{link Genus:edit, $person->genus->id}" class="btn btn-secondary" target="_blank">
                        <i class="fas fa-edit"></i> {_genus_edit_genus}
                    </a>
                {else}
                    <a href="#" class="btn btn-secondary disabled" target="_blank">
                        <i class="fas fa-edit"></i> {_genus_edit_genus}
                    </a>
                {/if}
                <a href="{link personAddGenusModal:personAddGenus!}" class="ajax btn btn-secondary">
                    <i class="fas fa-plus"></i> {_person_add_genus}
                </a>
            </div>
        </div>
        <div class="card-body">
            {snippet genus_persons}
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>{_person_person}</th>
                        <th width="20%"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {foreach $genusPersons as $genusPerson}
                        <tr>
                            <td class="align-middle">{$genusPerson|person}</td>
                            <td>
                                <a href="{link Person:edit, $genusPerson->id}" class="btn btn-primary btn-block" target="_blank">
                                    <i class="fas fa-edit"></i> {_person_edit_person}
                                </a>

                                <a href="{link personDeleteGenusModal:personDeleteGenus!, $presenter->getParameter('id'), $genusPerson->genus->id, $genusPerson->id}" class="ajax btn btn-danger btn-block">
                                    <i class="fas fa-trash"></i> {_person_delete_genus, ['', '']}
                                </a>
                            </td>
                        </tr>
                    {/foreach}
                    </tbody>
                </table>
            {/snippet}
        </div>
    </div>
    {* GENUS PERSONS END *}

    {* GENUS TREE BEGIN *}
    <div class="card mt-1">
        <div class="card-header d-flex align-items-center">
            <span class="ml-0">
                <h2>{_person_family_tree}</h2>
            </span>
            <div class="ml-auto">
            </div>
        </div>
        <div class="card-body">
            {if $presenter->getParameter('id') && $person->genus}
                <div id="basicdiagram" style="min-width: 960px; min-height: 540px;"/>
            {/if}
        </div>
    </div>
    {* GENUS TREE END *}
{/block}
