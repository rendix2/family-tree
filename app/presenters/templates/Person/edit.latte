        <div class="card-body">
            {if $presenter->getParameter('id') && $person->genusId}
            <div id="basicdiagram" style="min-width: 960px; min-height: 540px;"/>
            {/if}
        </div>
    </div>

    <div class="card mt-1">
        <div class="card-header">{_person_genus}</div>
